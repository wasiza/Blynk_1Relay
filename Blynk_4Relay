#define BLYNK_TEMPLATE_ID “xxxxxxxxxx”
#define BLYNK_TEMPLATE_NAME “xxxxxx”

#define BLYNK_FIRMWARE_VERSION        "0.1.0"

#define BLYNK_PRINT Serial
//#define BLYNK_DEBUG

#define APP_DEBUG

// Uncomment your board, or configure a custom board in Settings.h
//#define USE_ESP32_DEV_MODULE
//#define USE_ESP32C3_DEV_MODULE
//#define USE_ESP32S2_DEV_KIT
//#define USE_WROVER_BOARD
//#define USE_TTGO_T7
//#define USE_TTGO_T_OI

#include "BlynkEdgent.h"

// Define the relay pins
int relayPins[] = {18, 19, 22, 23};  // Replace with your GPIO pin numbers

void setup()
{
  Serial.begin(115200);

  BlynkEdgent.begin();
  
  for (int i = 0; i < 4; i++) {
    pinMode(relayPins[i], OUTPUT);
    digitalWrite(relayPins[i], LOW); // Initialize all relays to OFF
  }
}


void loop()
{
  BlynkEdgent.run();
}

BLYNK_WRITE(V0)
{
  int pinValue = param.asInt();
  digitalWrite(relayPins[0], !pinValue); // Invert logic: 0 (Blynk ON) -> HIGH, 1 (Blynk OFF) -> LOW
}

BLYNK_WRITE(V1)
{
  int pinValue = param.asInt();
  digitalWrite(relayPins[1], !pinValue);
}

BLYNK_WRITE(V2)
{
  int pinValue = param.asInt();
  digitalWrite(relayPins[2], !pinValue);
}

BLYNK_WRITE(V3)
{
  int pinValue = param.asInt();
  digitalWrite(relayPins[3], !pinValue);
}

